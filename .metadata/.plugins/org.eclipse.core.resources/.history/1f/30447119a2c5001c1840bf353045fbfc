package chap7;

class Tv{
	boolean power; 
	int channel;
	
	void power() {
		power = !power;
	}
	void channelUp() {
		++channel;
	}
	void channelDown(){
		--channel;
	}
}

class SmartTv extends Tv{
	boolean caption;
	void displayCation(String text) {
		if(caption) {
			System.out.println(text);
		}
	}
	// 상속을 받았기때문에 이 값들을 smarTv도 가지고 있게된다.
